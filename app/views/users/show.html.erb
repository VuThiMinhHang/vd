<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
<div class="span8">
<%if signed_in? %>
   <% if @user.books.any?%>
      
        <h3> Your Books (<%= @user.books.count %>)</h3>
        <%if current_user?(@user)%>
           <%if current_user.status%>
            List Book is Public <%= link_to "Change", edit_user_path %>
          <%else%>
            List Book is Private <%= link_to "Change", edit_user_path %>
          <%end%>
        <%end%>
        <ol class="books">
        <%= render @books %>
        </ol>
            <%= will_paginate @books %>
        <% else %>
        
    <% end %>
  <% end %>
  </div>
</div>

