<li id="<%= feed_item.id %>">
  <%= link_to gravatar_for(feed_item.user), feed_item.user %>
  <span class="user">
    <%= link_to feed_item.user.name, feed_item.user %>
  </span>
  <span class="name">NameBook: <%= link_to feed_item.name, feed_item %></span>
  <span class="description">Detail: <%= feed_item.description %></span><br/>
  <span class="timestamp">
    Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
  </span>
  <% if current_user?(feed_item.user) %>
    <%= link_to "del", feed_item, method: :delete,
                                     data: { confirm: "You sure?" } %>
 |  <%= link_to "edit", edit_book_path(feed_item), method: :get %>
  <% end %>
</li>
